<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demos"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginBottom="1dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnHome_act"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btnM_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btnS_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:layout_margin="1dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnAct1_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action1"
                android:layout_margin="2dp"
                 />

            <Button
                android:id="@+id/btnAct2_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action2"
                android:layout_margin="2dp"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnAct3_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action3"
                android:layout_margin="2dp"
                />

            <Button
                android:id="@+id/btnAct4_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action4"
                android:layout_margin="2dp"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btnAct5_act"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="Action5"
                    android:layout_margin="2dp"
                    />

                <Button
                    android:id="@+id/btnAct6_act"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:text="Action6"
                    android:layout_margin="2dp"></Button>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


